{
    "manifest_version": 3,
    "name": "PageStash",
    "version": "1.0.0",
    "description": "Manage your web pages with ease",
    "icons": {
        "16": "src/assets/images/logo-icon-16.png",
        "48": "src/assets/images/logo-icon-48.png",
        "128": "src/assets/images/logo-icon-128.png"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "sidePanel",
        "bookmarks",
        "storage",
        "favicon",
        "history",
        "tabs"
    ]
}